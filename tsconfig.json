{
   "compilerOptions": {
     "module": "CommonJS",
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "allowSyntheticDefaultImports": true,
     "target": "es6",
     "noImplicitAny": true,
     "moduleResolution": "node",
     "sourceMap": true,
     "plugins": [
       {
         "transform": "ts-optchain/transform"
       }
     ],
     "outDir": "dist",
     "baseUrl": "./",
     "rootDir": "./src",
     "paths": {
       "*": [
         "node_modules/*",
         "src/types/*",
         "src/core/models/*"
       ],
       "root/*": [
         "src/*"
       ]
     }
   },
   "include": [
     "src/**/*"
   ]
 }
 